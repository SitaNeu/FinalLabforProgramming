<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="225.0" prefWidth="433.0" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hrmanagementsita.EmployeeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <TableView fx:id="Tableview" prefHeight="110.0" prefWidth="404.0">
        <columns>
          <TableColumn fx:id="EmployeeID"  prefWidth="75.0" text="EmployeeID" />
          <TableColumn fx:id="EmployeeName"  prefWidth="75.0" text="EmployeeName" />
            <TableColumn fx:id="Salary" prefWidth="75.0" text="Salary" />
            <TableColumn fx:id="Email" prefWidth="75.0" text="Email" />
            <TableColumn fx:id="Password"  prefWidth="75.0" text="Password" />
        </columns>
      </TableView>
      <TextField fx:id="id" />
      <TextField fx:id="name" />
      <TextField fx:id="salary" />
      <TextField fx:id="email" />
      <TextField fx:id="password" />
      <Button onAction="#fetch" mnemonicParsing="false" text="Fetch" />
      <Button onAction="#load" mnemonicParsing="false" text="Load" />
      <Button onAction="#insert" mnemonicParsing="false" text="Insert" />
      <Button onAction="#delete" mnemonicParsing="false" text="Delete" />
      <Button  onAction="#update" mnemonicParsing="false" text="Update" />
   </children>

</VBox>
